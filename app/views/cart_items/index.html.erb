<% provide(:title, 'Cart') %>
<h1>Your Cart (<%= @cart_items.sum(:quantity) %>)</h1>

<% if @cart_items.count == 0 %>

  <li><h4>Your cart is currently empty.</h4></li>

  <br>
  <div class="row-fluid">
    <%= link_to 'Continue Shopping', products_index_path, class: 'btn btn-info' %>
  </div>

<% else %>

  <%= will_paginate %>

  <ul class="cart_items">
    <%= render @cart_items %>
  </ul>

  <%= will_paginate %>

  <br>
  <div class="row">
    <%= link_to 'Checkout', new_order_path, method: get, class: 'btn btn-success' %>
    <%= link_to 'Continue Shopping', products_path, class: 'btn btn-info' %>
    <%= link_to 'Empty cart', cart_items_empty_path, :method => :delete, :confirm => 'Are you sure?', class: 'pull-right btn btn-danger' %>
  </div>

<% end %>

