<div class="row-fluid">
  <div class="span4">
    <li>
      <h4><%= link_to product.name, product %></h4>

      <p><%= link_to image_tag(product.picture_url,  width: "150", height: "250"), product %></p>
      <p>Price: <%= number_to_currency(product.price) %></p>
      <%= link_to "View details Â»", product, :class => "btn btn-info" %>
      <% if signed_in? %>
        <%= link_to "Add to cart", cart_items_path(:product_id => product), :method => :post, :class => "btn btn-success" %>
      <% else %>
        <% session[:return_to] = request.env['REQUEST_PATH'] %>
        <%= link_to "Add to cart", signin_path, :class => "btn btn-success" %>
      <% end %>

    </li>
  </div>

  <div class="span8">
    <li>
      <p><b>Description: </b><%= product.description %></p>
    </li>
  </div>
</div>
